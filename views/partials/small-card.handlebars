<div class="monster-card small-card pb-3 m-1">
    <h2 class="monster-name m-0 pt-3 pl-3 pb-1">{{card.name}}</h2>
    <div class="monster-frame d-flex flex-column align-items-center mx-3">
        <div class="d-flex flex-row justify-content-between m-1">
            <div class="d-flex flex-row align-items-center">
                <img src="/assets/heart.png" class="card-icon">
                <h2 class="monster-health monster-stats m-0">{{card.hitpoints}}</h2>
            </div>
            <div class="d-flex flex-row align-items-center m-1">
                <img src="/assets/shield.png" class="card-icon">
                <h2 class="monster-defense monster-stats m-0">{{card.armor}}</h2> 
            </div>
            <div class="d-flex flex-row align-items-center m-1">
                <img src="/assets/fist.png" class="card-icon">  
                <h2 class="monster-attack monster-stats m-0">{{card.damage}}</h2>   
            </div>       
        </div>
        {{#if card.image}}
        <img src="https://www.dnd5eapi.co{{card.image}}" class="monster-image mb-2">
        {{else}}
        <img src="/assets/example.jpeg" class="monster-image mb-2">
        {{/if}}     
    </div>
</div>