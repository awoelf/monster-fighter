        <div id="playing-field">
            <div class="box m-auto">
                <div class="d-flex justify-content-around opponent-field">
                    {{> extra-small-card}}
                    {{> extra-small-card}}
                    {{> extra-small-card}}
                    {{> extra-small-card}}
                    {{> extra-small-card}}
